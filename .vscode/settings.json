{
  "editor.formatOnSave": true,
  // "editor.formatOnType": true,
  "markdown-image.local.path": "/assets/image",
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
